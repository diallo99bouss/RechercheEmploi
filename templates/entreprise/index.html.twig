{% extends 'base.html.twig' %}

{% block title %}Entreprise index{% endblock %}

{% block body %}
    <h1>Entreprise index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adresse</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Nom</th>
                <th>Ninea</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td>{{ entreprise.id }}</td>
                <td>{{ entreprise.adresse }}</td>
                <td>{{ entreprise.email }}</td>
                <td>{{ entreprise.telephone }}</td>
                <td>{{ entreprise.nom }}</td>
                <td>{{ entreprise.ninea }}</td>
                <td>
                    <a href="{{ path('entreprise_show', {'id': entreprise.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('entreprise_edit', {'id': entreprise.id}) }}" class="btn btn-secondary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('entreprise_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
